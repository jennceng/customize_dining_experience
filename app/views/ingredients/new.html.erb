<ul class="ingredients">
  <h1>Ingredients already in database:</h1>
  <% @ingredients.each do |ingredient| %>
    <li> <%= ingredient.name %></li>
  <% end %>
</ul>

<%= form_for @ingredient do |f| %>
  <h2>New Ingredient:</h2>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.submit 'Add' %>
<% end %>
